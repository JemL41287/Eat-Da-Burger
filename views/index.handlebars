<div class="container-flex">
    <div><img src="/assets/img/burger.png" height= "300px" width="300px"></div>

    <h1>Eat-Da-Burger!</h1>
    <br>

    <div class="row d-flex burger-div">
        <div class="col">
            <ul id="burgers-to-devour">
                <h2>Burgers to Devour!</h2>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p>{{burger_name}} <button class="devour btn btn-danger btn-sm" 
                    data-burgerid="{{id}}">Devour it!</button></p>
                </li>
                {{/unless}}
                {{/each}}
                
            </ul>
        </div>

        <div class="col">
            <ul id="burgers-devoured">
                <h2>Burgers Devoured!</h2>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>{{burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>

    <div class="burger-input">
        <form action="/api/burgers" method="POST">
        <textarea type="text" name="burger" id="burger-input" class="col-md-3" placeholder="Burger Name"></textarea>
        <p>Enter the name of the burger you want to eat, then click "Add Burger".</p>
        <button type="submit" id="add-burger" class="btn btn-primary btn-lg">Add Burger</button>
        </form>
    </div>

</div>